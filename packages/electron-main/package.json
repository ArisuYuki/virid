{
  "name": "@virid/electron-main",
  "type": "module",
  "version": "0.0.1",
  "description": "Electron main process adapter for Virid, responsible for sending, receiving, and broadcasting rendering process messages",
  "author": "ShirahaYuki",
  "license": "Apache 2.0",
  "keywords": [
    "electron",
    "virid",
    "main",
    "ipc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArisuYuki/virid.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {},
  "peerDependencies": {
    "electron": "^40.2.1",
    "@virid/core": "workspace:*"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "typecheck": "tsc --noEmit"
  }
}