{
  "name": "@virid/core",
  "version": "0.0.1",
  "description": "A lightweight and powerful message core built using dependency injection and CCS concepts",
  "author": "ShirahaYuki",
  "license": "MIT",
  "keywords": [
    "ioc",
    "di",
    "core",
    "virid",
    "message",
    "ecs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArisuYuki/virid.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "build:watch": "tsup --config tsup.config.ts --watch",
    "example": "npm run build && node --import @swc-node/register/esm-register examples/index.ts"
  },
  "dependencies": {},
  "peerDependencies": {
    "inversify": "^7.11.0",
    "reflect-metadata": "^0.2.2"
  }
}